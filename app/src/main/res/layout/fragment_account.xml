<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F13E7B"
    tools:context=".views.fragments.AccountFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_margin="5dp"
            android:background="@color/white"
            app:cardElevation="20dp"
            android:elevation="20dp">

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/fragmentAccountProfileImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    app:civ_border_width="2dp"
                    android:src="@drawable/user"
                    app:civ_border_color="@color/grey_font"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/fragmentAccountName"
                    android:textColor="@color/select"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Name: Md Parvez"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/fragmentAccountPhone"
                    android:textColor="@color/grey_font"
                    android:textSize="16sp"
                    android:text="+88017361943336"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="20sp">

                <TextView
                    android:id="@+id/fragmentAccountOrdersTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Orders"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/select"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:typeface="serif"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="20sp">

                <TextView
                    android:id="@+id/fragmentAccountPrescriptionsTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Prescriptions"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/select"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:typeface="serif"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="5dp"
                app:cardElevation="20sp">

                <TextView
                    android:id="@+id/fragmentNotificationsTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notifications"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/select"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:typeface="serif"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="20sp">

                <TextView
                    android:id="@+id/fragmentSettingTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Setting"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/select"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:typeface="serif"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="120sp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="20sp">

                <TextView
                    android:id="@+id/fragmentAccountSignOutTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign Out"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/select"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:typeface="serif"/>

            </androidx.cardview.widget.CardView>



        </LinearLayout>



    </LinearLayout>



</androidx.core.widget.NestedScrollView>