<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp"
    android:layout_width="match_parent"
    android:layout_height="165dp"
    android:layout_margin="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/productSampleImage"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:scaleType="fitXY"
            android:src="@drawable/slider_5"/>

        <TextView
            android:layout_marginStart="5dp"
            android:id="@+id/productSampleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:minLines="2"
            android:text="Rex6mg+200mg+50mgTablet Square Pharmaceuticals Ltd."
            android:textSize="12sp"
            android:typeface="normal"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/productSamplePrice"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:text="$200"
                android:gravity="center"
                android:textSize="12sp"
                android:typeface="serif"
                android:textColor="@color/select"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="|"
                android:textSize="12sp"
                android:gravity="center"
                android:typeface="serif"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/productSampleMaxPrice"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:text="$200"
                android:gravity="center"
                android:textSize="12sp"
                android:typeface="serif"
                android:textColor="#878080"/>

        </LinearLayout>





    </LinearLayout>



</androidx.cardview.widget.CardView>


